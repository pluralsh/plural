{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":dependencyDashboard",
    ":prHourlyLimit4",
    ":prConcurrentLimit10",
    "group:nodeJs"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true
    },
    {
      "matchManagers": ["npm"],
      "additionalBranchPrefix": "frontend/",
      "semanticCommitScope": "frontend",
      "addLabels": [
        "frontend"
      ]
    },
    {
      "matchManagers": ["mix"],
      "additionalBranchPrefix": "backend/",
      "semanticCommitScope": "backend",
      "addLabels": [
        "backend"
      ]
    }
  ],
  "labels": ["dependencies"],
  "regexManagers": [
    {
      "description": "Update Plural CLI version for the cloud shell",
      "fileMatch": ["^apps/core/lib/core/services/shell/pods.ex$"],
      "matchStrings": ["(^defp image.* ||$)\"(?<depName>.*?):(?<currentValue>.*?)\""],
      "datasourceTemplate": "docker"
    }
  ],
  "separateMinorPatch": true
}
